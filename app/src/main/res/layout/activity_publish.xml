<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/rl_all"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="#90ffffff"
    android:gravity="bottom|center">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30.0dip"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/icon_wenzi"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="文字" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30.0dip"
        android:layout_toRightOf="@id/tv_text"
        android:clickable="true"
        android:drawableTop="@mipmap/icon_pic"
        android:gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="相册" />

    <TextView
        android:id="@+id/tv_qianDao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_photo"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/icon_qiandao"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="签到" />




    <ImageView
        android:id="@+id/iv_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qianDao"
        android:layout_marginBottom="78.0dip"
        android:layout_toRightOf="@+id/tv_text"
        android:src="@mipmap/icon_close" />
</RelativeLayout>