<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_all"
    android:background="@color/baise"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/iv_imageView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"
        android:src="@mipmap/gouxuankuang"/>


    <TextView
        android:layout_toRightOf="@+id/iv_imageView"
        android:id="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="古树"
        android:textColor="@color/huise_text"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_bianji"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="编辑"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ff5a00"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_bianji"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:orientation="horizontal" >


        <LinearLayout
            android:id="@+id/ll_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon3b_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#ff5a00"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>